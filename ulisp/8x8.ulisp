   (display '(#x10 #x18 #xfc #xfe #xfc #x18 #x10 #x00))
   (delay 1000)
   (display '(#x08 #x0c #x7e #x7f #x7e #x0c #x08 #x00))
   (delay 1000)
   (display '(#x04 #x06 #x3f #x3f #x3f #x06 #x04 #x00))
   (delay 1000)
